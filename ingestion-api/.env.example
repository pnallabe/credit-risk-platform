# GCP Configuration
GCP_PROJECT_ID=your-project-id
REGION=us-central1

# Storage Configuration
GCS_RAW_BUCKET=risk-raw-data-dev
# Bucket lifecycle: 90 days retention

# Pub/Sub Configuration
PUBSUB_TOPIC=projects/your-project-id/topics/ingestion-events-dev

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ISSUER=risk-platform

# API Keys (comma-separated, for development only)
VALID_API_KEYS=dev-key-1,dev-key-2,dev-key-3

# Service Account (for local development)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Cloud Run Settings (used in deployment)
SERVICE_ACCOUNT=ingestion-api@your-project-id.iam.gserviceaccount.com
MEMORY=1Gi
CPU=2
MAX_INSTANCES=10
MIN_INSTANCES=0
CONCURRENCY=100
TIMEOUT=300

# Logging
LOG_LEVEL=INFO

# For production, use Secret Manager instead of environment variables
# Example: --set-secrets=JWT_SECRET=jwt-secret:latest